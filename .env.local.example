# ============================================================
# 서버 설정
# ============================================================
PORT=3000
HOSTNAME=0.0.0.0
NODE_ENV=development

# ============================================================
# Oracle Database 설정
# ============================================================
ORACLE_USER=ADMIN
ORACLE_PASSWORD=your_oracle_password
ORACLE_CONNECTION_STRING=(description=(retry_count=20)(retry_delay=3)(address=(protocol=tcps)(port=1522)(host=your-host.oraclecloud.com))(connect_data=(service_name=your_service_name))(security=(ssl_server_dn_match=yes)))

# ============================================================
# 소셜 로그인 시크릿 키 (절대 클라이언트에 노출하지 않음!)
# ============================================================

# 카카오
# 발급: https://developers.kakao.com → 내 애플리케이션 → 앱 키
KAKAO_REST_API_KEY=your_kakao_rest_api_key
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# 네이버
# 발급: https://developers.naver.com → 애플리케이션 등록
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# 구글
# 발급: https://console.cloud.google.com → API 및 서비스 → 사용자 인증 정보
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================================
# JWT 설정 (자체 토큰 발급용)
# ============================================================
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
JWT_EXPIRES_IN=7d

# ============================================================
# NextAuth.js 설정 (선택사항)
# ============================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key
